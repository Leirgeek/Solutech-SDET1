{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "types": ["node", "@cucumber/cucumber", "@playwright/test"]
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
